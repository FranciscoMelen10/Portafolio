---
import Icon from "../Card/Icon.astro";

interface Tecnologia {
  nombre: string;
  imagen: string;
}

interface Proyecto {
  titulo: string;
  background: string;
  descripcion: string;
  repositorio: string;
  deploy: string;
  iconos: Tecnologia[];
}

interface Props {
  proyecto: Proyecto;
}

const { proyecto } = Astro.props;
---

<div
  class="flex justify-center items-center gap-5 h-[250px] my-2 max-lg:flex-col max-lg:h-auto max-lg:gap-5"
>
  <img
    src={proyecto.background}
    alt={proyecto.titulo}
    loading="lazy"
    class="border-[#353535] border-2 rounded-2xl"
  />
  <section
    class="flex flex-col justify-between w-full text-[#F6F6F6] h-full max-lg:w-auto gap-1 max-lg:gap-4 max-lg:max-w-[600px] max-lg: max-lg:items-center"
  >
    <h1 class="text-[20px] font-semibold">{proyecto.titulo}</h1>
    <ul class="flex gap-2 flex-wrap items-center max-lg:justify-center">
      {
        proyecto.iconos.map((icono) => (
          <Icon nombre={icono.nombre} imagen={icono.imagen} />
        ))
      }
    </ul>
    <p class="font-light text-[#D1D1D1]">{proyecto.descripcion}</p>
    <article class="flex gap-4 transition-all">
      <a
        target="_blank"
        rel="noopener noreferrer"
        class="flex justify-center items-center gap-2 py-2 px-3 bg-[#131313] w-fit rounded-md hover:bg-white hover:text-black transition-all"
        href={`${proyecto.repositorio}`}
      >
        <svg
          width="30"
          height="30"
          viewBox="0 0 30 30"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M15 0C6.71625 0 0 6.82141 0 15.2349C0 22.3737 4.84 28.347 11.365 30C11.295 29.7943 11.25 29.5557 11.25 29.2598V26.6559C10.6413 26.6559 9.62125 26.6559 9.365 26.6559C8.33875 26.6559 7.42625 26.2078 6.98375 25.3749C6.4925 24.4494 6.4075 23.0339 5.19 22.168C4.82875 21.8798 5.10375 21.551 5.52 21.5954C6.28875 21.8163 6.92625 22.3521 7.52625 23.1468C8.12375 23.9429 8.405 24.1231 9.52125 24.1231C10.0625 24.1231 10.8725 24.0914 11.635 23.9695C12.045 22.912 12.7537 21.9382 13.62 21.4786C8.625 20.9568 6.24125 18.4329 6.24125 15.0063C6.24125 13.5311 6.86 12.1041 7.91125 10.9018C7.56625 9.70842 7.1325 7.27465 8.04375 6.34786C10.2913 6.34786 11.65 7.82818 11.9763 8.2281C13.0963 7.83834 14.3262 7.61744 15.6187 7.61744C16.9137 7.61744 18.1487 7.83834 19.2712 8.23064C19.5937 7.83326 20.9538 6.34786 23.2063 6.34786C24.1213 7.27592 23.6825 9.71985 23.3337 10.9107C24.3787 12.1105 24.9938 13.5336 24.9938 15.0063C24.9938 18.4304 22.6137 20.953 17.6262 21.4774C18.9987 22.2048 20 24.2488 20 25.7888V29.2598C20 29.3919 19.9713 29.4871 19.9563 29.6001C25.8013 27.5193 30 21.8824 30 15.2349C30 6.82141 23.2837 0 15 0Z"
            fill="currentColor"></path>
        </svg>

        <span>Ver c√≥digo</span>
      </a>

      {
        proyecto.deploy !== "" ? (
          <a
            target="_blank"
            rel="noopener noreferrer"
            class="flex justify-center items-center gap-2 py-2 px-3 bg-[#131313] w-fit rounded-md hover:bg-white hover:text-black transition-all"
            href={`${proyecto.deploy}`}
          >
            <svg
              width="30"
              height="30"
              viewBox="0 0 30 30"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M5.07615 5.42831C5.53709 5.42831 5.91076 5.02684 5.91076 4.5316C5.91076 4.03636 5.53709 3.63489 5.07615 3.63489C4.61521 3.63489 4.24155 4.03636 4.24155 4.5316C4.24155 5.02684 4.61521 5.42831 5.07615 5.42831Z"
                fill="currentColor"
              />
              <path
